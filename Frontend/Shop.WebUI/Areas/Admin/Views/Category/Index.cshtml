@model List<Shop.DTOs.CatalogDTOs.CategoryDTOs.ResultCategoryDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Basic Tables</h4>
                <p>For basic styling&mdash;light padding and only horizontal dividers&mdash;add the base class <code>.table</code> to any <code>&lt;table&gt;</code>. It may seem super redundant, but given the widespread use of tables for other plugins like calendars and date pickers, we've opted to isolate our custom table styles.</p>
                <div class="bs-example" data-example-id="simple-table">
                    <table class="table">
                        <caption>
                            Optional table caption.
                        </caption>
                        <thead>
                            
                                <tr>
                                    <th>#</th>
                                    <th>Category Name</th>
                                    <th>Category aid mallar</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                            <tr>
                                <th scope="row">@item.CategoryId</th>
                                <td>@item.CategoryName</td>
                                    <td><a href="#" class="btn btn-warning">Category aid mallar</a></td>
                                    <td><a href="#" class="btn btn-success">Edit</a></td>
                                    <td><a href="#" class="btn btn-danger">Delete</a></td>
                            </tr>
                            }

                        </tbody>
                    </table>
                    <a href="Admin/Category/CreateCategory" class="btn btn-primary">New Category add</a>
                </div>
            </div>
        </div>
    </div>
</section>

